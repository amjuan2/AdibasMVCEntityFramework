@model IEnumerable<MVCUniversityProject.Models.productos>

@{
    ViewBag.Title = "Index";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Crear nuevo producto", "Create")
</p>
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div style="width: 25rem; box-shadow: 2px 4px 10px rgba(0,0,0,0.5);">
                <div style="display: flex; justify-content: center;">
                    <img src="~/img/logo.png" width="200" height="200" class="card-img-top">
                </div>
                <div>
                    <h5 style="display: flex; justify-content: center; font-size: 20px"><strong>@Html.DisplayFor(modelItem => item.nombre)</strong></h5>
                    <p style="display: flex; justify-content: center">@Html.DisplayFor(modelItem => item.descripcion)</p>
                </div>
                <ul class="list-group" style="margin-bottom: 0px">
                    <li class="list-group-item" style="display: flex; justify-content: center">@Html.DisplayFor(modelItem => item.valor)</li>
                    <li class="list-group-item" style="display: flex; justify-content: center">@Html.ActionLink("Editar", "Edit", new { id = item.id_producto })</li>
                    <li class="list-group-item" style="display: flex; justify-content: center">@Html.ActionLink("Detalle", "Details", new { id = item.id_producto })</li>
                    <li class="list-group-item" style="display: flex; justify-content: center">@Html.ActionLink("Eliminar", "Delete", new { id = item.id_producto })</li>
                </ul>
                <a href="#" class="btn btn-primary btn-block" style="border-radius: 0px">Comprar</a>
            </div>
        </div>
    }
</div>
